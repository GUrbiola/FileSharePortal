@using System.Web.Optimization;

@{
    ViewBag.Title = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card text-center">
            <div class="card-body p-5">
                <i class="bi bi-shield-x text-danger" style="font-size: 5rem;"></i>
                <h1 class="mt-3">Access Denied</h1>
                <p class="lead">You don't have permission to access this resource.</p>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
                    <i class="bi bi-house-door"></i> Go to Home
                </a>
            </div>
        </div>
    </div>
</div>
