@using System.Web.Optimization;

@model FileSharePortal.ViewModels.SiteSettingsViewModel
@{
    ViewBag.Title = "Site Settings";
    var themes = ViewBag.Themes as List<FileSharePortal.Models.Theme>;
}

<div class="page-header">
    <h1><i class="bi bi-gear-fill"></i> Site Settings</h1>
    <p class="text-muted">Customize your portal's branding and appearance</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-pencil"></i> General Settings
            </div>
            <div class="card-body">
                <form method="post" action="@Url.Action("SiteSettings")" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.SettingsId)

                    <div class="mb-4">
                        @Html.LabelFor(m => m.SiteName, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.SiteName, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(m => m.SiteName, "", new { @class = "text-danger" })
                        <small class="form-text text-muted">This name appears in the header and browser title</small>
                    </div>

                    <div class="mb-4">
                        @Html.LabelFor(m => m.SiteDescription, new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.SiteDescription, new { @class = "form-control", rows = 2 })
                        <small class="form-text text-muted">Brief description of your portal</small>
                    </div>

                    <h5 class="mt-4 mb-3">Logo & Branding</h5>

                    <div class="mb-4">
                        @Html.LabelFor(m => m.LogoFile, new { @class = "form-label" })
                        @if (!string.IsNullOrEmpty(Model.CurrentLogoPath))
                        {
                            <div class="mb-2">
                                <strong>Current Logo:</strong><br />
                                <img src="@String.Concat(Settings.BaseUrl, Model.CurrentLogoPath)" alt="Current Logo" style="max-height: 60px; margin-top: 10px; border: 1px solid #ddd; padding: 5px; background: white;">
                            </div>
                        }
                        @Html.TextBoxFor(m => m.LogoFile, new { @class = "form-control", type = "file", accept = "image/*" })
                        <small class="form-text text-muted">Recommended: PNG or SVG, transparent background, max height 40px</small>
                    </div>

                    <div class="mb-4">
                        @Html.LabelFor(m => m.FaviconFile, new { @class = "form-label" })
                        @if (!string.IsNullOrEmpty(Model.CurrentFaviconPath))
                        {
                            <div class="mb-2">
                                <strong>Current Favicon:</strong><br />
                                <img src="@String.Concat(Settings.BaseUrl, Model.CurrentFaviconPath)" alt="Current Favicon" style="width: 32px; height: 32px; margin-top: 10px; border: 1px solid #ddd;">
                            </div>
                        }
                        @Html.TextBoxFor(m => m.FaviconFile, new { @class = "form-control", type = "file", accept = "image/*" })
                        <small class="form-text text-muted">Recommended: ICO or PNG, 32x32 or 64x64 pixels</small>
                    </div>

                    <h5 class="mt-4 mb-3">Active Theme</h5>

                    <div class="mb-4">
                        <label class="form-label">Select Active Theme</label>
                        @Html.DropDownListFor(m => m.ActiveThemeId,
                            new SelectList(themes, "ThemeId", "ThemeName", Model.ActiveThemeId),
                            "-- Select Theme --",
                            new { @class = "form-select" })
                        <small class="form-text text-muted">Choose a theme to customize the portal's appearance</small>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save Settings
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Themes
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-info-circle"></i> Guidelines
            </div>
            <div class="card-body">
                <h6><i class="bi bi-image"></i> Logo Guidelines:</h6>
                <ul class="small">
                    <li>Use PNG or SVG format</li>
                    <li>Transparent background works best</li>
                    <li>Recommended height: 30-40px</li>
                    <li>Landscape orientation preferred</li>
                    <li>Keep file size under 200KB</li>
                </ul>

                <h6 class="mt-3"><i class="bi bi-bookmark"></i> Favicon Guidelines:</h6>
                <ul class="small">
                    <li>ICO or PNG format</li>
                    <li>Square dimensions (32x32 or 64x64)</li>
                    <li>Simple, recognizable design</li>
                    <li>Works well at small sizes</li>
                    <li>Keep file size under 50KB</li>
                </ul>

                <div class="alert alert-info mt-3">
                    <i class="bi bi-lightbulb"></i>
                    <strong>Tip:</strong> After uploading, refresh your browser (Ctrl+F5) to see the new favicon.
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <i class="bi bi-palette"></i> Quick Theme Switch
            </div>
            <div class="card-body">
                <p class="small">Quickly preview available themes:</p>
                <div class="d-grid gap-2">
                    @foreach (var theme in themes.Take(4))
                    {
                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="previewTheme(@theme.ThemeId)">
                            @theme.ThemeName
                        </button>
                    }
                </div>
                <a href="@Url.Action("Index")" class="btn btn-sm btn-link mt-2 w-100">
                    View All Themes
                </a>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.sidebar-link').removeClass('active');
            $('#SiteSettingsLink').addClass('active');
        });

        function previewTheme(themeId)
        {
            $('#ActiveThemeId').val(themeId);
        }
    </script>
}
