@using System.Web.Optimization;

@model List<FileSharePortal.Models.FileReport>
@{
    ViewBag.Title = "File Reports";
}

<div class="page-header">
    <h1><i class="bi bi-flag"></i> File Reports</h1>
    <p class="text-muted">Review and manage reported files</p>
</div>

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>File Name</th>
                            <th>Reported By</th>
                            <th>Reason</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@report.SharedFile.FileName</strong>
                                    <br />
                                    <small class="text-muted">By: @report.SharedFile.UploadedBy.FullName</small>
                                </td>
                                <td>@report.ReportedBy.FullName</td>
                                <td>@report.Reason</td>
                                <td>@report.ReportedDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @switch (report.Status)
                                    {
                                        case FileSharePortal.Models.ReportStatus.Pending:
                                            <span class="badge bg-warning">Pending</span>
                                            break;
                                        case FileSharePortal.Models.ReportStatus.UnderReview:
                                            <span class="badge bg-info">Under Review</span>
                                            break;
                                        case FileSharePortal.Models.ReportStatus.Resolved:
                                            <span class="badge bg-success">Resolved</span>
                                            break;
                                        case FileSharePortal.Models.ReportStatus.Dismissed:
                                            <span class="badge bg-secondary">Dismissed</span>
                                            break;
                                    }
                                </td>
                                <td class="table-actions">
                                    <a href="@Url.Action("ReviewReport", new { id = report.ReportId })" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> Review
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-flag" style="font-size: 4rem; color: #ccc;"></i>
                <h3 class="mt-3">No Reports</h3>
                <p class="text-muted">No file reports have been submitted</p>
            </div>
        }
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function ()
        {
            $('.sidebar-link').removeClass('active');
            $('#FilesReportedLink').addClass('active');
        });
    </script>
}
