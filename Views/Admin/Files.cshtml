@using System.Web.Optimization;

@model List<FileSharePortal.Models.SharedFile>
    @{
        ViewBag.Title = "All Files";
    }

    <div class="page-header">
        <h1><i class="bi bi-folder"></i> All Files</h1>
        <p class="text-muted">Manage all files in the system</p>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>File Name</th>
                                <th>Uploaded By</th>
                                <th>Size</th>
                                <th>Uploaded Date</th>
                                <th>Downloads</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var file in Model)
                            {
                                <tr id="file_@file.FileId">
                                    <td>
                                        <i class="bi bi-file-earmark text-primary"></i>
                                        <strong>@file.FileName</strong>
                                    </td>
                                    <td>@file.UploadedBy.FullName</td>
                                    <td>@String.Format("{0:0.00} MB", file.FileSize / 1048576.0)</td>
                                    <td>@file.UploadedDate.ToString("MMM dd, yyyy")</td>
                                    <td><span class="badge bg-info">@file.DownloadCount</span></td>
                                    <td class="table-actions">
                                        <a href="@Url.Action("Details", "Files", new { id = file.FileId })" class="btn btn-sm btn-outline-primary" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteFile(@file.FileId)" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-folder-x" style="font-size: 4rem; color: #ccc;"></i>
                    <h3 class="mt-3">No Files</h3>
                    <p class="text-muted">No files in the system</p>
                </div>
            }
        </div>
    </div>

    @section scripts {
        <script>
        $(document).ready(function ()
        {
            $('.sidebar-link').removeClass('active');
            $('#FilesAdminLink').addClass('active');
        });
        function deleteFile(fileId)
        {
            Swal.fire({
                title: 'Are you sure?',
                text: 'This action cannot be undone.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("DeleteFile")', { fileId: fileId }, function (data) {
                        if (data.success) {
                            Swal.fire({
                                title: 'Deleted!',
                                text: 'File has been deleted.',
                                icon: 'success',
                                confirmButtonColor: '#0d6efd'
                            });
                            $('#file_' + fileId).fadeOut();
                        } else {
                            Swal.fire({
                                title: 'Error!',
                                text: 'Failed to delete file.',
                                icon: 'error',
                                confirmButtonColor: '#0d6efd'
                            });
                        }
                    }).fail(function () {
                        Swal.fire({
                            title: 'Error!',
                            text: 'An error occurred while deleting the file.',
                            icon: 'error',
                            confirmButtonColor: '#0d6efd'
                        });
                    });
                }
            });
        }
        </script>
    }
