@using System.Web.Optimization;

@model List<FileSharePortal.Models.Theme>
@{
    ViewBag.Title = "Theme Management";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-palette"></i> Theme Management</h1>
        <p class="text-muted">Customize the appearance of your portal</p>
    </div>
    <div class="d-flex gap-2">
        <button type="button" class="btn btn-warning" onclick="restoreDefaults()" id="restoreButton">
            <i class="bi bi-arrow-counterclockwise"></i> Restore Defaults
        </button>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Theme
        </a>
    </div>
</div>

<div class="row">
    @foreach (var theme in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card file-card" id="theme_@theme.ThemeId">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="card-title">@theme.ThemeName</h5>
                        @if (theme.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else if (theme.IsDefault)
                        {
                            <span class="badge bg-info">Default</span>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(theme.Description))
                    {
                        <p class="text-muted small">@theme.Description</p>
                    }

                    <!-- Theme Color Preview -->
                    <div class="mb-3">
                        <div class="d-flex gap-2">
                            <div style="width: 30px; height: 30px; background-color: @theme.PrimaryColor; border-radius: 4px; border: 1px solid #ddd;" title="Primary"></div>
                            <div style="width: 30px; height: 30px; background-color: @theme.SuccessColor; border-radius: 4px; border: 1px solid #ddd;" title="Success"></div>
                            <div style="width: 30px; height: 30px; background-color: @theme.DangerColor; border-radius: 4px; border: 1px solid #ddd;" title="Danger"></div>
                            <div style="width: 30px; height: 30px; background-color: @theme.InfoColor; border-radius: 4px; border: 1px solid #ddd;" title="Info"></div>
                        </div>
                    </div>

                    @*<p class="text-muted small">
                        <i class="bi bi-calendar"></i> Created: @theme.CreatedDate.ToString("MMM dd, yyyy")
                    </p>*@

                    <div class="d-flex gap-2 flex-wrap">
                        @if (!theme.IsActive)
                        {
                            <button type="button" class="btn btn-sm btn-success" onclick="activateTheme(@theme.ThemeId)">
                                <i class="bi bi-check-circle"></i> Activate
                            </button>
                        }
                        <button type="button" class="btn btn-sm btn-outline-info" onclick="copyTheme(@theme.ThemeId, '@theme.ThemeName')" title="Copy Theme">
                            <i class="bi bi-files"></i>
                        </button>
                        <a href="@Url.Action("Edit", new { id = theme.ThemeId })" class="btn btn-sm btn-outline-primary" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                        @if (!theme.IsDefault && !theme.IsActive)
                        {
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteTheme(@theme.ThemeId)" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section scripts {
    <script>
        $(document).ready(function ()
        {
            $('.sidebar-link').removeClass('active');
            $('#ThemesLink').addClass('active');
        });
        function activateTheme(themeId)
        {
            Swal.fire({
                title: 'Activate Theme',
                text: 'Are you sure you want to activate this theme?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#0d6efd',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, activate it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("Activate")', { id: themeId }, function (data)
                    {
                        if (data.success)
                        {
                            Swal.fire({
                                title: 'Activated!',
                                text: 'Theme has been activated.',
                                icon: 'success',
                                confirmButtonColor: '#0d6efd'
                            }).then(() => {
                                location.reload();
                            });
                        }
                        else
                        {
                            Swal.fire({
                                title: 'Error!',
                                text: data.message || 'Error activating theme',
                                icon: 'error',
                                confirmButtonColor: '#0d6efd'
                            });
                        }
                    });
                }
            });
        }

        function deleteTheme(themeId) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'This action cannot be undone.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("Delete")', { id: themeId }, function (data) {
                        if (data.success) {
                            Swal.fire({
                                title: 'Deleted!',
                                text: 'Theme has been deleted.',
                                icon: 'success',
                                confirmButtonColor: '#0d6efd',
                                timer: 2000,
                                showConfirmButton: false
                            });
                            $('#theme_' + themeId).fadeOut(function () {
                                $(this).remove();
                            });
                        } else {
                            Swal.fire({
                                title: 'Error!',
                                text: data.message || 'Error deleting theme',
                                icon: 'error',
                                confirmButtonColor: '#0d6efd'
                            });
                        }
                    });
                }
            });
        }

        async function copyTheme(themeId, themeName) {
            const { value: newName } = await Swal.fire({
                title: 'Copy Theme',
                html: 'Enter a name for the copied theme:',
                input: 'text',
                inputValue: themeName + ' (Copy)',
                showCancelButton: true,
                confirmButtonColor: '#0d6efd',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Copy',
                cancelButtonText: 'Cancel',
                inputValidator: (value) => {
                    if (!value || value.trim() === '') {
                        return 'Theme name cannot be empty';
                    }
                }
            });

            if (newName) {
                $.post('@Url.Action("Copy")', { id: themeId, newName: newName }, function (data) {
                    if (data.success) {
                        Swal.fire({
                            title: 'Success!',
                            text: data.message,
                            icon: 'success',
                            confirmButtonColor: '#0d6efd'
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            title: 'Error!',
                            text: data.message,
                            icon: 'error',
                            confirmButtonColor: '#0d6efd'
                        });
                    }
                }).fail(function (xhr, status, error) {
                    Swal.fire({
                        title: 'Error!',
                        text: 'Error copying theme: ' + error,
                        icon: 'error',
                        confirmButtonColor: '#0d6efd'
                    });
                });
            }
        }

        function restoreDefaults() {
            Swal.fire({
                title: 'Restore Default Themes?',
                html: 'This will:<br>' +
                      '<ul style="text-align: left; display: inline-block; margin: 10px 0;">' +
                      '<li>Reset all 12 default themes to their original colors</li>' +
                      '<li>Create any missing default themes</li>' +
                      '<li>Not affect custom themes you created</li>' +
                      '</ul><br><strong>Do you want to continue?</strong>',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#0d6efd',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, restore defaults!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    var restoreButton = $('#restoreButton');
                    var originalText = restoreButton.html();

                    // Disable button and show loading state
                    restoreButton.prop('disabled', true);
                    restoreButton.html('<i class="bi bi-arrow-counterclockwise"></i> Restoring...');

                    $.post('@Url.Action("RestoreDefaults")', function (data) {
                        restoreButton.prop('disabled', false);
                        restoreButton.html(originalText);

                        if (data.success) {
                            Swal.fire({
                                title: 'Success!',
                                text: data.message,
                                icon: 'success',
                                confirmButtonColor: '#0d6efd'
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Error!',
                                text: data.message,
                                icon: 'error',
                                confirmButtonColor: '#0d6efd'
                            });
                        }
                    }).fail(function (xhr, status, error) {
                        restoreButton.prop('disabled', false);
                        restoreButton.html(originalText);
                        Swal.fire({
                            title: 'Error!',
                            text: 'Error restoring defaults: ' + error,
                            icon: 'error',
                            confirmButtonColor: '#0d6efd'
                        });
                    });
                }
            });
        }
    </script>
}
