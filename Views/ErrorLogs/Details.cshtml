@model FileSharePortal.Models.ErrorLog
@{
    ViewBag.Title = "Error Details";
    var currentUser = ViewBag.CurrentUser as FileSharePortal.Models.User;
}

<div class="page-header">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Error Logs</a></li>
            <li class="breadcrumb-item active">Error #@Model.ErrorLogId</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>
                    <i class="bi bi-exclamation-triangle-fill text-danger"></i> Error Details
                </span>
                <div>
                    @if (Model.IsResolved)
                    {
                        <span class="badge bg-success">
                            <i class="bi bi-check-circle"></i> Resolved
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-warning">
                            <i class="bi bi-exclamation-circle"></i> Unresolved
                        </span>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Error ID:</strong></div>
                    <div class="col-sm-9">#@Model.ErrorLogId</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Occurred At:</strong></div>
                    <div class="col-sm-9">@Model.OccurredAt.ToString("MMMM dd, yyyy HH:mm:ss")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Error Type:</strong></div>
                    <div class="col-sm-9">
                        <code>@Model.ExceptionType</code>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Error Message:</strong></div>
                    <div class="col-sm-9">
                        <div class="alert alert-danger mb-0">
                            @Model.ErrorMessage
                        </div>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.InnerException))
                {
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Inner Exception:</strong></div>
                        <div class="col-sm-9">
                            <div class="alert alert-warning mb-0">
                                @Model.InnerException
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <i class="bi bi-geo-alt"></i> Location Information
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.RequestUrl))
                {
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Request URL:</strong></div>
                        <div class="col-sm-9">
                            <code style="word-break: break-all;">@Model.RequestUrl</code>
                        </div>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.HttpMethod))
                {
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>HTTP Method:</strong></div>
                        <div class="col-sm-9">
                            <span class="badge bg-primary">@Model.HttpMethod</span>
                        </div>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.ControllerName))
                {
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Controller/Action:</strong></div>
                        <div class="col-sm-9">
                            <code>@Model.ControllerName/@Model.ActionName</code>
                        </div>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.SourceFile))
                {
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Source File:</strong></div>
                        <div class="col-sm-9">
                            <code style="word-break: break-all;">@Model.SourceFile</code>
                        </div>
                    </div>
                }
                @if (Model.LineNumber.HasValue)
                {
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Line Number:</strong></div>
                        <div class="col-sm-9">
                            <span class="badge bg-info">Line @Model.LineNumber</span>
                        </div>
                    </div>
                }
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.StackTrace))
        {
            <div class="card mb-3">
                <div class="card-header">
                    <i class="bi bi-list-ol"></i> Stack Trace
                </div>
                <div class="card-body">
                    <pre style="background-color: #f8f9fa; padding: 15px; border-radius: 5px; max-height: 400px; overflow-y: auto;"><code>@Model.StackTrace</code></pre>
                </div>
            </div>
        }

        @if (Model.IsResolved && !string.IsNullOrEmpty(Model.ResolutionNotes))
        {
            <div class="card mb-3">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-check-circle"></i> Resolution
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-sm-3"><strong>Resolved At:</strong></div>
                        <div class="col-sm-9">@Model.ResolvedAt?.ToString("MMMM dd, yyyy HH:mm:ss")</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-3"><strong>Notes:</strong></div>
                        <div class="col-sm-9">@Model.ResolutionNotes</div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">
                <i class="bi bi-lightning"></i> Actions
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (!Model.IsResolved)
                    {
                        <button type="button" class="btn btn-success" onclick="resolveError(@Model.ErrorLogId)">
                            <i class="bi bi-check-circle"></i> Mark as Resolved
                        </button>
                    }
                    <button type="button" class="btn btn-danger" onclick="deleteError(@Model.ErrorLogId)">
                        <i class="bi bi-trash"></i> Delete Error Log
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <i class="bi bi-person"></i> User Information
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.Username))
                {
                    <div class="mb-2">
                        <strong>Username:</strong><br />
                        <span>@Model.Username</span>
                    </div>
                    if (Model.User != null)
                    {
                        <div class="mb-2">
                            <strong>Full Name:</strong><br />
                            <span>@Model.User.FullName</span>
                        </div>
                        <div class="mb-2">
                            <strong>Email:</strong><br />
                            <span>@Model.User.Email</span>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted mb-0">Anonymous user</p>
                }
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <i class="bi bi-info-circle"></i> Request Details
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.IpAddress))
                {
                    <div class="mb-2">
                        <strong>IP Address:</strong><br />
                        <code>@Model.IpAddress</code>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.UserAgent))
                {
                    <div class="mb-2">
                        <strong>User Agent:</strong><br />
                        <small class="text-muted" style="word-break: break-word;">@Model.UserAgent</small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.sidebar-link').removeClass('active');
            $('#ErrorLogsLink').addClass('active');
        });

        async function resolveError(errorId) {
            const { value: notes } = await Swal.fire({
                title: 'Resolve Error',
                html: 'Add resolution notes (optional):',
                input: 'textarea',
                inputPlaceholder: 'Describe how this error was resolved...',
                showCancelButton: true,
                confirmButtonColor: '#0d6efd',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Mark as Resolved',
                cancelButtonText: 'Cancel'
            });

            if (notes !== undefined) {
                $.post('@Url.Action("Resolve")', { id: errorId, resolutionNotes: notes || '' }, function (data) {
                    if (data.success) {
                        Swal.fire({
                            title: 'Resolved!',
                            text: data.message,
                            icon: 'success',
                            confirmButtonColor: '#0d6efd'
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            title: 'Error!',
                            text: data.message,
                            icon: 'error',
                            confirmButtonColor: '#0d6efd'
                        });
                    }
                });
            }
        }

        function deleteError(errorId) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'This will permanently delete this error log.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("Delete")', { id: errorId }, function (data) {
                        if (data.success) {
                            Swal.fire({
                                title: 'Deleted!',
                                text: data.message,
                                icon: 'success',
                                confirmButtonColor: '#0d6efd'
                            }).then(() => {
                                window.location.href = '@Url.Action("Index")';
                            });
                        } else {
                            Swal.fire({
                                title: 'Error!',
                                text: data.message,
                                icon: 'error',
                                confirmButtonColor: '#0d6efd'
                            });
                        }
                    });
                }
            });
        }
    </script>
}
