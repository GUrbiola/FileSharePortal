@using System.Web.Optimization;

@model List<FileSharePortal.Models.Theme>
@{
    ViewBag.Title = "Theme Management";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-palette"></i> Theme Management</h1>
        <p class="text-muted">Customize the appearance of your portal</p>
    </div>
    <div class="d-flex gap-2">
        <button type="button" class="btn btn-warning" onclick="restoreDefaults()" id="restoreButton">
            <i class="bi bi-arrow-counterclockwise"></i> Restore Defaults
        </button>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Theme
        </a>
    </div>
</div>

<div class="row">
    @foreach (var theme in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card file-card" id="theme_@theme.ThemeId">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="card-title">@theme.ThemeName</h5>
                        @if (theme.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else if (theme.IsDefault)
                        {
                            <span class="badge bg-info">Default</span>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(theme.Description))
                    {
                        <p class="text-muted small">@theme.Description</p>
                    }

                    <!-- Theme Color Preview -->
                    <div class="mb-3">
                        <div class="d-flex gap-2">
                            <div style="width: 30px; height: 30px; background-color: @theme.PrimaryColor; border-radius: 4px; border: 1px solid #ddd;" title="Primary"></div>
                            <div style="width: 30px; height: 30px; background-color: @theme.SuccessColor; border-radius: 4px; border: 1px solid #ddd;" title="Success"></div>
                            <div style="width: 30px; height: 30px; background-color: @theme.DangerColor; border-radius: 4px; border: 1px solid #ddd;" title="Danger"></div>
                            <div style="width: 30px; height: 30px; background-color: @theme.InfoColor; border-radius: 4px; border: 1px solid #ddd;" title="Info"></div>
                        </div>
                    </div>

                    @*<p class="text-muted small">
                        <i class="bi bi-calendar"></i> Created: @theme.CreatedDate.ToString("MMM dd, yyyy")
                    </p>*@

                    <div class="d-flex gap-2 flex-wrap">
                        @if (!theme.IsActive)
                        {
                            <button type="button" class="btn btn-sm btn-success" onclick="activateTheme(@theme.ThemeId)">
                                <i class="bi bi-check-circle"></i> Activate
                            </button>
                        }
                        <button type="button" class="btn btn-sm btn-outline-info" onclick="copyTheme(@theme.ThemeId, '@theme.ThemeName')" title="Copy Theme">
                            <i class="bi bi-files"></i>
                        </button>
                        <a href="@Url.Action("Edit", new { id = theme.ThemeId })" class="btn btn-sm btn-outline-primary" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                        @if (!theme.IsDefault && !theme.IsActive)
                        {
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteTheme(@theme.ThemeId)" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section scripts {
    <script>
        $(document).ready(function ()
        {
            $('.sidebar-link').removeClass('active');
            $('#ThemesLink').addClass('active');
        });
        function activateTheme(themeId)
        {
            if (confirm('Are you sure you want to activate this theme?'))
            {
                $.post('@Url.Action("Activate")', { id: themeId }, function (data)
                {
                    if (data.success)
                    {
                        location.reload();
                    }
                    else
                    {
                        alert(data.message || 'Error activating theme');
                    }
                });
            }
        }

        function deleteTheme(themeId) {
            if (confirm('Are you sure you want to delete this theme? This action cannot be undone.')) {
                $.post('@Url.Action("Delete")', { id: themeId }, function (data) {
                    if (data.success) {
                        $('#theme_' + themeId).fadeOut(function () {
                            $(this).remove();
                        });
                    } else {
                        alert(data.message || 'Error deleting theme');
                    }
                });
            }
        }

        function copyTheme(themeId, themeName) {
            var newName = prompt('Enter a name for the copied theme:', themeName + ' (Copy)');

            if (newName === null) {
                // User cancelled
                return;
            }

            if (newName.trim() === '') {
                alert('Theme name cannot be empty');
                return;
            }

            $.post('@Url.Action("Copy")', { id: themeId, newName: newName }, function (data) {
                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            }).fail(function (xhr, status, error) {
                alert('Error copying theme: ' + error);
            });
        }

        function restoreDefaults() {
            if (!confirm('Are you sure you want to restore all default themes to their original values?\n\nThis will:\n- Reset all 12 default themes to their original colors\n- Create any missing default themes\n- Not affect custom themes you created\n\nDo you want to continue?')) {
                return;
            }

            var restoreButton = $('#restoreButton');
            var originalText = restoreButton.html();

            // Disable button and show loading state
            restoreButton.prop('disabled', true);
            restoreButton.html('<i class="bi bi-arrow-counterclockwise"></i> Restoring...');

            $.post('@Url.Action("RestoreDefaults")', function (data) {
                restoreButton.prop('disabled', false);
                restoreButton.html(originalText);

                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            }).fail(function (xhr, status, error) {
                restoreButton.prop('disabled', false);
                restoreButton.html(originalText);
                alert('Error restoring defaults: ' + error);
            });
        }
    </script>
}
