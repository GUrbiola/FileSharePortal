@using System.Web.Optimization;

@{
    ViewBag.Title = "Create Distribution List";
}

<div class="page-header">
    <h1><i class="bi bi-list-ul"></i> Add Distribution List</h1>
    <p class="text-muted">Link an Active Directory distribution list</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    <strong>Note:</strong> The AD Distinguished Name should be in the format: CN=GroupName,OU=Groups,DC=domain,DC=com
                </div>

                <form method="post" action="@Url.Action("CreateDistributionList")">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>

                    <div class="mb-3">
                        <label for="adDistinguishedName" class="form-label">AD Distinguished Name</label>
                        <input type="text" class="form-control" id="adDistinguishedName" name="adDistinguishedName" required
                               placeholder="CN=GroupName,OU=Groups,DC=domain,DC=com">
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Add Distribution List
                        </button>
                        <a href="@Url.Action("DistributionLists")" class="btn btn-outline-secondary">
                            <i class="bi bi-x"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
