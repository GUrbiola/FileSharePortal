@using System.Web.Optimization;

@model List<FileSharePortal.Models.Role>
@{
    ViewBag.Title = "Role Management";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-diagram-3"></i> Role Management</h1>
        <p class="text-muted">Manage user roles and permissions</p>
    </div>
    <div>
        <a href="@Url.Action("CreateRole")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Role
        </a>
    </div>
</div>

<div class="row">
    @foreach (var role in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card file-card">
                <div class="card-body">
                    <h5 class="card-title">@role.RoleName</h5>
                    @if (!string.IsNullOrEmpty(role.Description))
                    {
                        <p class="text-muted">@role.Description</p>
                    }
                    <p class="text-muted small">
                        <i class="bi bi-calendar"></i> Created: @role.CreatedDate.ToString("MMM dd, yyyy")
                    </p>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("ManageRole", new { id = role.RoleId })" class="btn btn-outline-primary">
                            <i class="bi bi-gear"></i> Manage Members
                        </a>
                        <button type="button" class="btn btn-outline-danger" onclick="deleteRole(@role.RoleId, '@role.RoleName')">
                            <i class="bi bi-trash"></i> Delete Role
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section scripts {
    <script>
        $(document).ready(function ()
        {
            $('.sidebar-link').removeClass('active');
            $('#RolesLink').addClass('active');
        });

        function deleteRole(roleId, roleName) {
            Swal.fire({
                title: 'Are you sure?',
                html: 'Do you want to delete the role "<strong>' + roleName + '</strong>"?<br><br>' +
                      'This will:<br>' +
                      '<ul style="text-align: left; display: inline-block;">' +
                      '<li>Remove all users from this role</li>' +
                      '<li>Remove all distribution lists from this role</li>' +
                      '<li>Remove this role from all file shares</li>' +
                      '</ul><strong>This action cannot be undone.</strong>',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("DeleteRole")', { roleId: roleId }, function (data) {
                        if (data.success) {
                            Swal.fire({
                                title: 'Deleted!',
                                text: data.message,
                                icon: 'success',
                                confirmButtonColor: '#0d6efd'
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Error!',
                                text: data.message,
                                icon: 'error',
                                confirmButtonColor: '#0d6efd'
                            });
                        }
                    }).fail(function (xhr, status, error) {
                        Swal.fire({
                            title: 'Error!',
                            text: 'Error deleting role: ' + error,
                            icon: 'error',
                            confirmButtonColor: '#0d6efd'
                        });
                    });
                }
            });
        }
    </script>
}
