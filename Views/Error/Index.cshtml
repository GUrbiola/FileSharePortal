@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <h1 class="display-5 mb-3">Oops! Something went wrong</h1>
                    <p class="text-muted mb-4">
                        We're sorry, but an unexpected error has occurred. Our team has been notified and we're working to fix the issue.
                    </p>
                    <hr class="my-4">
                    <p class="text-muted small mb-4">
                        If this problem persists, please contact your system administrator.
                    </p>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                            <i class="bi bi-house-door"></i> Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.sidebar-link').removeClass('active');
        });
    </script>
}
